<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="redis-consumer" />

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://115.159.64.86:2181" />
    <!-- <dubbo:registry address="zookeeper://39.106.185.126:2181"/> -->

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:reference interface="pers.husen.highdsa.service.redis.RedisPools" id="redisPools" timeout="100000" check="false"/>
    <dubbo:reference interface="pers.husen.highdsa.service.redis.RedisOperation" id="redisOperation" timeout="100000" check="false"/>
</beans>